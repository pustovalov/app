!!!
%html
  %head
    %meta{ content: "text/html; charset=UTF-8", "http-equiv": "Content-Type" }
    %title App
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': true
    = javascript_include_tag 'application', 'data-turbolinks-track': true
    = csrf_meta_tags
  %body
    %nav.navbar.navbar-static-top.navbar-inverse
      .container
        .navbar-header
          %button.navbar-toggle.collapsed{ type: "button", data: { toggle: "collapse", target: "#navbar" }  }
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar

          %a.navbar-brand{ href: "/" }
            Flashcards
            
        %nav.collapse.navbar-collapse#navbar
          %ul.nav.navbar-nav.navbar-right
            %li
              = link_to "All cards", cards_path
            %li
              = link_to "Add card", new_card_path
    .container
      = yield
