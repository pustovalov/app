!!!
%html
  %head
    %meta{ content: "text/html; charset=UTF-8", "http-equiv": "Content-Type" }
    %title App
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': true
    = javascript_include_tag 'application', 'data-turbolinks-track': true
    = csrf_meta_tags
  %body
    %nav.navbar.navbar-static-top.navbar-inverse
      .container
        .navbar-header
          %button.navbar-toggle.collapsed{ type: "button", data: { toggle: "collapse", target: "#navbar" }  }
            %span.icon-bar
            %span.icon-bar
            %span.icon-bar

          %a.navbar-brand{ href: "/" }
            Flashcards
            
        %nav.collapse.navbar-collapse#navbar
          - if current_user
            %ul.nav.navbar-nav
              %li
                = link_to "All cards", cards_path
              %li
                = link_to "Add card", new_card_path
            
            
          %ul.nav.navbar-nav.navbar-right
            - if current_user
              - if current_user.email
                %li
                  %p.navbar-text
                    = current_user.email
              %li
                = link_to "Settings", settings_path
              %li
                = link_to "Log Out", log_out_path, method: :delete
            
            - else
              %li
                = link_to "Sign Up", sign_up_path
              %li
                = link_to "Log In", log_in_path
                

    .container
      = render partial: "shared/flash_messages", flash: flash
      = yield
