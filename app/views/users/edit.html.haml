= simple_form_for current_user do |f|
  = f.input :email, label: "Email", input_html: { value: current_user.email }
  = f.input :password, label: "Password", required: true
  = f.input :new_password, label: "New Password"
  = f.input :locale, as: :select, collection: I18n.available_locales, include_blank: false, label: "Language"
  = f.button :submit, value: "Change"